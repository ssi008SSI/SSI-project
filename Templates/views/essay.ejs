<%- include('header'); -%>
    <!-- Navbar - End -->
    <!-- MCQ - Start -->
    <div class="wrapper mb-4 ">
        <div class="container card-body align-self-center">
            <h6 id="question">  
                <%= use[ra].essayQuestion %></h6>
            <hr>
            <p><%= use[ra].Description %></p>
            <form action="/essay" method="POST">
            <div class="">
                <div class="checkbox form-check my-3">
                    <textarea id="w3review" name="essay" rows="4" cols="50"></textarea>
                </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn rounded-pill  btn-dark px-4">Continue</button>
            </div>
            </form>
        </div>
    </div>
    <!-- MCQ - End -->
    <script>
        window.onload = function () {
        var minute = 9;
        var sec = 60;
        setInterval(function () {
            document.getElementById("timer").innerHTML = minute + " : " + sec;
            sec--;
            if (sec == 00) {
                minute--;
                sec = 60;
                if (minute == 0) {
                    minute = 5;
                }
            }
        }, 1000);
    }
        </script>

</body>
</html>