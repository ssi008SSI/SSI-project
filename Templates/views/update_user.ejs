<!-- include header -->
<%- include('include/_header') %>
  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/admin"><i class="fas fa-angle-double-left"></i>All Questions</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Question</h2>
            <span class="text-light">Use the below form to Update a Question</span>
        </div>
        <!-- add user form -->
         <!-- form handling -->
 <form method="POST" id="update_user">
    <div class="new_user">
        <div class="form-group">
            <label for="Question" class="text-light">Question</label>
            <input type="hidden" name="id" value="<%= user._id %>">
            <input type="text" name="Question" value="<%= user.Question %>" placeholder="Question">
        </div>
        <div class="form-group">
            <label for="Option1" class="text-light">Option1</label>
            <input type="text" name="Option1" value="<%= user.Option1%>" placeholder="option">
        </div>
        <div class="form-group">
            <label for="Option2" class="text-light">Option2</label>
            <input type="text" name="Option2" value="<%= user.Option2%>" placeholder="option">
        </div>
        <div class="form-group">
            <label for="Option3" class="text-light">Option3</label>    
            <input type="text" name="Option3" value="<%= user.Option3%>" placeholder="option">
        </div>
        <div class="form-group">
            <label for="Option4" class="text-light">Option4</label>
            <input type="text" name="Option4" value="<%= user.Option4%>" placeholder="option">
        </div>
        <div class="form-group">
            <label for="IsCorrect" class="text-light">IsCorrect</label>
            <input type="text" name="IsCorrect" value="<%= user.IsCorrect%>" placeholder="IsCorrect">
        </div>
        <div class="form-group">
            <label for="essayQuestion" class="text-light">Essay-Question</label>
            <input type="text" name="essayQuestion" value="<%= user.essayQuestion%>" placeholder="Essay-Question">
        </div>
        <div class="form-group">
            <label for="Description" class="text-light">Description</label>
            <input type="text" name="Description" value="<%= user.Description%>" placeholder="Description">
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>
    </div>
</form>
</div>
</main>
<!-- /Main Site -->
<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
